{
    "compilerOptions": {
        "lib": [
            "ES2021"
        ],
        "target": "ES2021",
        "module": "Node16",
        "moduleResolution": "Node16",
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noUncheckedIndexedAccess": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "composite": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
